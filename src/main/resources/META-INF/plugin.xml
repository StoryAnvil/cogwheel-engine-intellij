<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.denisjaved.cogwheelengineintellij</id>
    <name>Cogwheel Engine</name>
    <vendor>StoryAnvil</vendor>
    <description><![CDATA[
        Support for <a href="https://modrinth.com/mod/cogwheel-engine">Cogwheel Engine's</a> code files.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>com.intellij.modules.json</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="CogScript"
                implementationClass="com.github.denisjaved.cogwheelengineintellij.cogscript.CogScriptFileType"
                fieldName="INSTANCE"
                language="cogscript"
                extensions="sa"
        />
        <lang.parserDefinition
                language="cogscript"
                implementationClass="com.github.denisjaved.cogwheelengineintellij.cogscript.CogScriptParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="cogscript"
                implementationClass="com.github.denisjaved.cogwheelengineintellij.cogscript.CogScriptSyntaxHighlighterFactory"/>
        <colorSettingsPage
                implementation="com.github.denisjaved.cogwheelengineintellij.cogscript.CogScriptColorPage"/>
        <lang.commenter
                language="cogscript"
                implementationClass="com.github.denisjaved.cogwheelengineintellij.cogscript.CogScriptCommenter"/>
<!--        <annotator-->
<!--                language="cogscript"-->
<!--                implementationClass="com.github.denisjaved.cogwheelengineintellij.cogscript.CogScriptAnnotator"/>-->
        <localInspection
                implementationClass="com.github.denisjaved.cogwheelengineintellij.cogscript.inspections.RedefinedDefaultVariable"
                language="cogscript" key="inspection.cogscript.RedefinedDefaultVariable" groupKey="inspection.cogscript.group"
                enabledByDefault="true"/>
        <localInspection
                implementationClass="com.github.denisjaved.cogwheelengineintellij.json.JsonDiffInspection"
                language="JSON" key="inspection.json.Diff" groupKey="inspection.cogscript.group"
                enabledByDefault="false"/>
<!--        <psi.referenceContributor-->
<!--                language="cogscript"-->
<!--                implementation="com.github.denisjaved.cogwheelengineintellij.cogscript.references.CogScriptReferenceContributor"/>-->
<!--        <lang.refactoringSupport-->
<!--                language="cogscript"-->
<!--                implementationClass="com.github.denisjaved.cogwheelengineintellij.cogscript.references.CogScriptVariableSupportProvider"/>-->
<!--        <lang.elementManipulator forClass="com.github.denisjaved.cogwheelengineintellij.cogscript.psi.NamedVariable" implementationClass="com.github.denisjaved.cogwheelengineintellij.cogscript.references.CogScriptElementManipulator" />-->
    </extensions>
</idea-plugin>
